<div class="container">


	<%= form_for(resource, as: resource_name, :html => {:class => "form-signup"}  , url: registration_path(resource_name)) do |f| %>
	  <h2 class="form-signup-heading">Sign up</h2>
	  
	  <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email address" %>

	  <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password"  %>
      
      <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-control", :placeholder => "Password Confirmation" %>

	  <div><%= f.submit "Sign up", :class => "btn btn-lg, btn-primary, btn-block" %></div>
	<% end %>

	<div class="signup-links">
		<%= render "devise/shared/links" %>
	</div>

</div> <!-- /container -->

