<h1>Listing lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pods</th>
      <th>Description</th>
      <th>User</th>
      <th>Type</th>
      <% if current_user.try(:admin?)%>        
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.pods %></td>
        <td><%= list.description %></td>
        <td><%= list.user %></td>
        <td><%= list.type %></td>
        <td><%= link_to 'Show', list %></td>
        <% if current_user.try(:admin?)%>        
          <td><%= link_to 'Edit', edit_list_path(list) %></td>
          <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.try(:admin?)%>
  <%= link_to 'New List', new_list_path %>
<% end%>
